<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/gradient_background2"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.actransit.restroomfinder.FeedbackActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_marginBottom="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-20dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/lblTitle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restroom needs attention"
                android:id="@+id/chkNeedAttention"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/lblTitle"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Feedback"
                android:id="@+id/lblFeedback"
                android:layout_below="@+id/chkNeedAttention"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtFeedback"
                android:maxLength="100"
                android:maxLines="5"
                android:maxHeight="100dp"
                android:layout_below="@+id/lblFeedback"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rating"
                android:id="@+id/textView5"
                android:layout_below="@+id/txtFeedback"
                android:layout_alignParentStart="true" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingbarFeedback"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/listLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_margin="0px">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="55">
        </RelativeLayout>
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:id="@+id/lstFeedbacks"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:layout_above="@+id/btnShowHide"
            android:background="@drawable/gradient_background1"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/showhide_feedbacks"
            android:id="@+id/btnShowHide"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:padding="0px"
            android:onClick="btnShowHideFeedback_onClick"
            android:background="@drawable/gradient_background2" />
    </LinearLayout>

</RelativeLayout>
